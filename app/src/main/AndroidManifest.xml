        <activity
            android:name=".Model.Classes.playersList"
            android:exported="false" />
        <activity
            android:name=".View.GameRoom"
            android:exported="false" />
        <activity
            android:name=".View.Chatroom"
            android:exported="false" />
        <activity
            android:name=".View.GameCenter"
            android:exported="false" />
        <activity
            android:name=".View.EditProfile"
            android:exported="false" />
        <activity
            android:name=".View.MyProfile"
            android:exported="false"
            android:theme="@style/Theme.TeamBall.NoActionBar"/>
        <activity
            android:name=".View.SportsMenu"
            android:exported="false"
            android:theme="@style/Theme.TeamBall.NoActionBar"/>
        <activity
            android:name=".View.RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".View.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".View.SplashScreen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>